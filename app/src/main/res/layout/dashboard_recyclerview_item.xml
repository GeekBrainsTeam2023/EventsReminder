<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/eventsListTitlesLinearLayout"
        style="@style/my_events_and_dashboard_list_titles_linear_layout"
        app:layout_constraintBottom_toTopOf="@id/dashboardDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewDashboardIntervalOfEvents"
            style="@style/textview_dashboard_interval_of_events"
            android:layout_gravity="start"
            tools:text="today 365 events" />

        <TextView
            android:id="@+id/textViewDashboardDateOfEvents"
            style="@style/textview_dashboard_date_of_events"
            tools:text="22 may 2023" />
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dashboardDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/eventsListTitlesLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/dashboardRecyclerViewCardview"
        app:layout_constraintStart_toStartOf="parent"
        app:dividerColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardRecyclerViewCardview"
        style="@style/dashboard_recyclerview_cardview"
        app:cardCornerRadius="@dimen/dashboard_recyclerview_cardview_corner_radius"
        app:cardElevation="@dimen/dashboard_recyclerview_cardview_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboardDivider">

        <LinearLayout
            android:id="@+id/dashboardRecyclerViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dashboardRecyclerViewItemImage"
                style="@style/my_events_and_dashboard_rv_item_image"
                />

                <TextView
                    android:id="@+id/dashboardRecyclerViewItemTitleTextview"
                    style="@style/dashboard_recyclerview_item_title_textview"
                    android:layout_weight="1.2"
                    tools:text="name" />

            <LinearLayout
                android:id="@+id/ageTimeLinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dashboardRecyclerViewItemAgeTextview"
                    style="@style/dashboard_recyclerview_item_age_textview"
                    tools:text="100 let" />
                <TextView
                    android:id="@+id/dashboardRecyclerViewItemEventTimeTextview"
                    style="@style/dashboard_recyclerview_item_event_time_textview"
                    tools:text="10:10" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>