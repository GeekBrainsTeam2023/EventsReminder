<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemAppWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widgetEventTitleTextview"
        android:text="Kuznezhov Evgeniy Sergeevich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/widget_event_title_textview" />

    <TextView
        android:id="@+id/widgetEventDateTextview"
        android:text="22.04.2023"
        app:layout_constraintEnd_toStartOf="@id/widgetEventTimeTextview"
        app:layout_constraintStart_toEndOf="@id/widgetEventTitleTextview"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/widget_event_date_textview" />

    <TextView
        android:id="@+id/widgetEventTimeTextview"
        android:text="00.01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/widgetEventDateTextview"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/widget_event_time_textview" />
</LinearLayout>