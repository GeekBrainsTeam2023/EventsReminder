<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/myEventsListTitlesLinearLayout"
        style="@style/my_events_and_dashboard_list_titles_linear_layout"
        app:layout_constraintBottom_toTopOf="@id/myEventsDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIntervalOfMyEvents"
            style="@style/textview_dashboard_interval_of_events"
            android:layout_gravity="start"
            tools:text="today 365 events" />

        <TextView
            android:id="@+id/textViewMyEventsDateOfEvents"
            style="@style/textview_dashboard_date_of_events"
            tools:text="22 may 2023" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/myEventsDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:dividerColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/myEventsRecyclerViewCardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myEventsListTitlesLinearLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/myEventsRecyclerViewCardview"
        style="@style/dashboard_recyclerview_cardview"
        app:cardCornerRadius="@dimen/dashboard_recyclerview_cardview_corner_radius"
        app:cardElevation="@dimen/dashboard_recyclerview_cardview_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myEventsDivider">

        <LinearLayout
            android:id="@+id/myEventsRecyclerViewInternalLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myEventsRecyclerViewItemImage"
                style="@style/my_events_and_dashboard_rv_item_image"
 />

            <TextView
                android:id="@+id/myEventsRecyclerViewItemTitleTextview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                tools:text="name" />

            <RelativeLayout
                android:id="@+id/myEventsAgeTimeLinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myEventsRecyclerViewItemAgeTextview"
                    style="@style/dashboard_recyclerview_item_age_textview"
                    tools:text="birthday"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/myEventsRecyclerViewItemEventTimeTextview"
                    style="@style/dashboard_recyclerview_item_event_time_textview"
                    android:layout_alignParentBottom="true"
                    tools:text="time" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


